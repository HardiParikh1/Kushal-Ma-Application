<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="8dp">

        <!-- Title and Image -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRIMESTER 1"
            android:layout_marginTop="20dp"
            android:textSize="27sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="360dp"
            android:scaleType="centerInside"
            android:src="@drawable/trimester1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="390dp"
            android:layout_marginTop="-30dp"
            android:textStyle="bold"
            android:text="Earliest Phase of Pregnancy"
            android:textSize="12sp"/><!-- Replace 'your_image_name' with your image name -->

        <!-- Description -->

        <!-- Ingredients -->

        <TextView
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            android:text="During the first month of pregnancy, several important structures form. These structures are a tiny clump of cells, but will grow to become the amniotic sac, placenta and umbilical cord. A tube that becomes the fetus’s brain and spinal cord forms, as well as its circulatory system. A face, circles for eyes and the beginning of a mouth take shape.
The embryo is about a quarter-inch inch long — smaller than a grain of rice."
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="Symptoms Of Early Pregnancy"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/ingredientsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
        </ListView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Doctor Visit Procedure"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/instructionsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>


        <!-- Instructions Button -->
        <Button
            android:id="@+id/checkRecipeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Out The Entire Recipe"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-120dp"
            android:layout_marginLeft="-20dp"
            android:src="@drawable/meds"
            />
        <ImageButton
            android:id="@+id/videoButton"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="-390dp"
            android:src="@drawable/videobut"
            android:scaleType="centerInside"

            android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>
</ScrollView>
